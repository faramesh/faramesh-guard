# Faramesh Guard - Production Environment Variables
# Copy to .env and fill in values

# ============================================================
# CLOUDFLARE WORKERS (You create these, then fill in URLs)
# ============================================================

# After running: wrangler deploy (in guard-ingest/)
GUARD_INGEST_URL=https://guard-ingest.<your-subdomain>.workers.dev

# After running: wrangler deploy (in guard-enroll/)
GUARD_ENROLL_URL=https://guard-enroll.<your-subdomain>.workers.dev

# After running: wrangler deploy (in guard-support/)
GUARD_SUPPORT_URL=https://guard-support.<your-subdomain>.workers.dev

# ============================================================
# TUF SECURE UPDATES
# ============================================================

# TUF metadata repository (signed manifests)
GUARD_TUF_METADATA_URL=https://updates.faramesh.ai/guard/v1

# Where signed artifacts are downloaded from
# Option 1: GitHub Releases
GUARD_ARTIFACT_BASE_URL=https://github.com/faramesh-ai/guard/releases/download

# Option 2: Self-hosted R2 bucket
# GUARD_ARTIFACT_BASE_URL=https://guard-updates.<account>.r2.dev

# ============================================================
# AUTHENTICATION
# ============================================================

# Shared secret for Guard â†’ Worker authentication
# Generate with: openssl rand -hex 32
GUARD_AUTH_TOKEN=<generate-me>

# ============================================================
# TRANSPARENCY (Optional)
# ============================================================

# Rekor-style transparency log
GUARD_TRANSPARENCY_URL=https://transparency.faramesh.ai

# ============================================================
# D1 DATABASE (Internal - set in wrangler.toml)
# ============================================================

# Get this from: wrangler d1 create guard-fleet
# D1_DATABASE_ID=<your-database-id>

# ============================================================
# OPTIONAL FEATURES
# ============================================================

# Enable telemetry collection (default: true)
GUARD_TELEMETRY_ENABLED=true

# Heartbeat interval in seconds (default: 60)
GUARD_HEARTBEAT_INTERVAL=60

# ============================================================
# CODE SIGNING (For build pipeline)
# ============================================================

# macOS Developer ID
# APPLE_TEAM_ID=XXXXXXXXXX
# APPLE_SIGNING_IDENTITY=Developer ID Application: Your Company (XXXXXXXXXX)

# Windows EV Certificate
# WINDOWS_CERT_PATH=/path/to/certificate.pfx
# WINDOWS_CERT_PASSWORD=<password>

# Linux GPG Key
# GPG_KEY_ID=XXXXXXXX
